<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activities.MainActivity"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <ImageView
                    android:id="@+id/user_photo_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/top_avatar"
                    android:fitsSystemWindows="true"/>
                <android.support.v7.widget.Toolbar
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:titleTextColor="@color/white"
                    app:layout_collapseMode="pin"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/body_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:paddingTop="@dimen/size_small_24"
                    android:paddingBottom="@dimen/size_small_24"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <android.support.v7.widget.AppCompatTextView
                            style="@style/headerText.field"
                            android:text="5"/>
                        <android.support.v7.widget.AppCompatTextView
                            style="@style/headerText"
                            android:text="@string/rating"/>
                    </LinearLayout>
                    <View
                        style="@style/verticalDivider">
                    </View>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <android.support.v7.widget.AppCompatTextView
                            style="@style/headerText.field"
                            android:text="5"/>
                        <android.support.v7.widget.AppCompatTextView
                            style="@style/headerText"
                            android:text="@string/code_lines"/>
                    </LinearLayout>
                    <View
                        style="@style/verticalDivider">
                    </View>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">
                        <android.support.v7.widget.AppCompatTextView
                            style="@style/headerText.field"
                            android:text="5"/>
                        <android.support.v7.widget.AppCompatTextView
                            style="@style/headerText"
                            android:text="@string/projects"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_smallest_8"
                    android:layout_marginBottom="@dimen/spacing_smallest_8">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_call_black_24dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/spacing_normal_32"
                        android:layout_marginRight="@dimen/spacing_smaller_16"
                        android:gravity="bottom">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                style="@style/editTextField.disabled"
                                android:id="@+id/userPhoneNumber"
                                android:inputType="phone"
                                android:hint="@string/user_phone"
                                android:text="+7 (999) 999-99-99"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/horizontalDivider">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_smallest_8"
                    android:layout_marginBottom="@dimen/spacing_smallest_8">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_mail_black_24dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/spacing_normal_32"
                        android:layout_marginRight="@dimen/spacing_smaller_16"
                        android:gravity="bottom">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                style="@style/editTextField.disabled"
                                android:id="@+id/userEmail"
                                android:inputType="textEmailAddress"
                                android:hint="@string/user_email"
                                android:text="lorem@ipsum.com"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_send_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/horizontalDivider">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_smallest_8"
                    android:layout_marginBottom="@dimen/spacing_smallest_8">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_vk_circle_24dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/spacing_normal_32"
                        android:layout_marginRight="@dimen/spacing_smaller_16"
                        android:gravity="bottom">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                style="@style/editTextField.disabled"
                                android:id="@+id/userVkProfile"
                                android:inputType="textUri"
                                android:hint="@string/user_vk_profile"
                                android:text="vk.com/lorem_ipsum"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/horizontalDivider">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_smallest_8"
                    android:layout_marginBottom="@dimen/spacing_smallest_8">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_github_circle_24dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_large_72"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/spacing_normal_32"
                        android:layout_marginRight="@dimen/spacing_smaller_16"
                        android:gravity="bottom">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                style="@style/editTextField.disabled"
                                android:id="@+id/userGithubRepository"
                                android:inputType="textUri"
                                android:hint="@string/user_github_repository"
                                android:text="github.com/lorem/EntataSuuma"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <ImageView
                        style="@style/icon.right"
                        android:src="@drawable/ic_visibility_black_24dp"/>
                </LinearLayout>
                <View
                    style="@style/horizontalDivider">
                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/spacing_smallest_8"
                    android:layout_marginBottom="@dimen/spacing_smallest_8">
                    <ImageView
                        style="@style/icon.left"
                        android:src="@drawable/ic_account_circle_black_24dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/spacing_normal_32"
                        android:layout_marginRight="@dimen/spacing_smaller_16"
                        android:gravity="bottom">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                style="@style/editTextField.disabled"
                                android:id="@+id/userBio"
                                android:inputType="none"
                                android:hint="@string/user_info"
                                android:text="@string/lorem_ipsum"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_black_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginRight="16dp"/>
    </android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>